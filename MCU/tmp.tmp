#include <stdint.h>
#include <stdbool.h>
#include "em_device.h"
#include "em_chip.h"
#include "em_cmu.h"
#include "em_emu.h"
#include "bsp.h"
#include "bsp_trace.h"

volatile uint32_t msTicks;
void Delay(uint32_t dlyTicks);
void SysTick_Handler(void) {msTicks++;}

void Delay(uint32_t dlyTicks) {
	uint32_t curTicks = msTicks;
	while((msTicks - curticks) < dlyTicks);
}

int main(void) {
	CHIP_Init();
	BSP_TraceProfilerSetup();
	if(SysTick_Config(CMU_ClockFreqGet(cmuClock_CORE) / 1000)) while(1);
	BSP_LedsInit();
	BSP_LedSet(0);
	
	while(1) {
		BSP_LedToggle(0);
		BSP_LedToggle(1);
		Delay(1000);
	}
	return 0;
}
